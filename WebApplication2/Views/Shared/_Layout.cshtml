                            {
                             @*<li>@Html.ActionLink("Logout", "Logout", "Admin")</li>*@
                                @Html.Partial("_LoginPartial")
                               

                            }

                        
                    </div>
                </div>
            </div>
        </div>
        @*<div class="container body-content">

            </div>*@
        @RenderBody()
    
        <footer class="footer">

            <p>Telephone number:+306981189423</p>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>

