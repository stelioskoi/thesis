@using System.Web.Mvc
@using WebApplication2.Models
@model IEnumerable<WebApplication2.Models.Crew>

@{
    ViewBag.Title = "Partners";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Partners</title>
    <style>
        .row {
            
        margin-left:30px;
        margin-right:30px;
        padding-top:3%;
        }
        .thumbnail  {
             border:1px solid #000000;
            border-radius: 5px 20px 5px; 
       }

        #crewpic {
            border-radius: 5px 20px 5px;
            
        }

    .btn-danger {
        font-size:10px;
        
        }
</style>
    <link href="~/Content/polaroid.css" rel="stylesheet" />
</head>

<body>
    <h2 class="page-header">@WebApplication2.Resources.HomeText.Crew</h2>
 
   <div class="row">  
    <ul class="polaroids">
@foreach (var item in Model)
{
        <li>
            <a  title="@Html.DisplayFor(modelItem => item.fname) @Html.DisplayFor(modelItem => item.sname)">
                <img id="crewpic" src="~/ImagesCrew/@item.nameofpic"  />
                <h5>@Html.DisplayFor(modelItem => item.job)</h5>
               
                <button type="button" class="btn-danger" id="jobbut" data-toggle="modal" data-target="#@Html.DisplayFor(modelItem => item.sname)">Info</button>
             </a>
          
        </li>
        //αναδυόμενο παράθυρο με τις πληροφορίες 
        <div class="modal" id="@Html.DisplayFor(modelItem => item.sname)" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h3>@Html.DisplayFor(modelItem => item.fname) @Html.DisplayFor(modelItem => item.sname)</h3>
                        @Html.DisplayFor(modelItem => item.email)
                    </div>

                    <div class="modal-body">
                        @Html.DisplayFor(modelItem => item.info)

                    </div>
                </div>
            </div>

        </div>
}
    </ul>
</div>
  
     
</body>
</html>
