@model WebApplication2.Models.PostViewModel

@{
    ViewBag.Title = "DeletePost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DeletePost", "Blog", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="delacccont">
        <div class="delaccgrp">
            <div class="delacclbl" style="text-align:center;">Are you sure to delete the post?</div>
        </div>
        <div class="delaccgrp">
            <input type="hidden" value="@Model.ID" name="postId" />
            <input type="submit" value="Delete Post" class="btn btn-default delaccbtn" />
        </div>
    </div>
}
